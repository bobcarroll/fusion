<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>

  <log4net>
    <appender name="ConsoleOut" type="Fusion.Framework.CustomConsoleAppender, libfusion">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>

    <appender name="InstallLog" type="log4net.Appender.FileAppender">
      <file type="log4net.Util.PatternString" value="%property{logfile}" />
      <appendToFile value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %message [%method]%newline" />
      </layout>
    </appender>

    <appender name="MSBuildOut" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow, HighIntensity" />
      </mapping>
      <mapping>
        <level value="NOTICE" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="Cyan, HighIntensity" />
      </mapping>
      <mapping>
        <level value="FINE" />
        <foreColor value="White, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>

    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleOut" />
    </root>

    <logger name="msbuild" additivity="false">
      <level value="NOTICE" />
      <appender-ref ref="MSBuildOut" />
      <appender-ref ref="InstallLog" />
    </logger>
  </log4net>
</configuration>
